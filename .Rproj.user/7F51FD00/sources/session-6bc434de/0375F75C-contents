#positionnement
setwd(dir = "/Users/williamdevos/Documents/Maitrise/Data")

# regroupement des données

##SALAMANDRES
pcin_det <-
  read.csv("pcin_det.csv",
           header = TRUE,
           stringsAsFactors = TRUE)
pcin <- det_pcin[, -1]

## CARABES
# Groupe proies de salamandres
car_det_prey <-
  read.csv("car_det_prey.csv",
           header = TRUE,
           stringsAsFactors = TRUE)
car_prey <- car_det_prey[, -1]

# Groupe competiteurs de salamandres
car_det_comp <-
  read.csv("car_det_comp.csv",
           header = TRUE,
           stringsAsFactors = TRUE)
car_comp <- car_det_comp[, -1]

load(file = "coll_data_JAGS.RData")
coll_biom <- coll.data.JAGS$biomass

pcin.jags <- pcin.data.JAGS$pcin

## Variables environnementales

# Site
Obs_cov <-
  read.csv("ObsCov.csv", header = TRUE, stringsAsFactors = TRUE)

# precipitation (binaire)
precip.3D.bin <-
  read.csv("precip.3D.bin.csv",
           header = TRUE,
           stringsAsFactors = TRUE)
precip <- precip.3D.bin[, -1]

# Volume de débris ligneux (Standardisé)
CWD.STD <-
  read.csv("cwd_tot_std.csv",
           header = TRUE,
           stringsAsFactors = TRUE)
CWD.STD <- CWD.STD[, -1]

# Ordonner les sites par ordre alphabétique
pcin_det2 <- pcin_det[order(pcin_det$site), ]
car_det_comp2 <- car_det_comp[order(car_det_comp$ID), ]
car_det_prey2 <- car_det_prey[order(car_det_prey$ID), ]
coll_biom2 <- coll_biom[order(coll_biom$site), ]
Obs_cov2 <- Obs_cov[order(Obs_cov$ID), ]
precip.3D.bin2 <- precip.3D.bin[order(precip.3D.bin$X), ]
CWD.STD2 <- CWD.STD[order(CWD.STD$X), ]

data.JAGS <- list(
  pcin = pcin_det2,
  car_prey = car_det_prey2,
  car_comp = car_det_comp2,
  coll = coll_biom2,
  Obs_cov = Obs_cov2,
  precip = precip.3D.bin2,
  CWD_STD = CWD.STD2
)

save(data.JAGS, file = "data_JAGS.RData")

identical(
  pcin_det2$site,
  car_det_comp2$ID,
  car_det_prey2$ID,
  coll_biom2$site,
  Obs_cov2$ID,
  precip.3D.bin2$X,
  CWD.STD2$X
)
